<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/page1back">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXPENSES"
        android:textSize="50sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:textColor="@color/colorAccent"
        android:fontFamily="monospace"
        android:textStyle="normal|bold" />

    <EditText
        android:layout_marginTop="161dp"
        android:id="@+id/expense_type"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:hint="Enter the category of expense "
        android:textAlignment="center"
        android:layout_height="50dp"
        android:layout_width="300dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/amount_type"
        android:layout_below="@+id/expense_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textSize="20sp"
        android:hint="Enter the amount"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/amount_type"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:id="@+id/date_calender"
        android:hint="Select Date"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <com.spark.submitbutton.SubmitButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        app:sub_btn_background="@color/gray"
        android:id="@+id/submit_expense"
        android:layout_below="@+id/date_calender"
        app:sub_btn_duration="1000"
        app:sub_btn_line_color="@color/colorAccent"
        app:sub_btn_ripple_color="@color/colorAccent"
        app:sub_btn_tick_color="@color/white" />

</RelativeLayout>